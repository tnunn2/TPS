@model TPS.Models.Customer

@{
    Layout = null;
}


@using (Html.BeginForm("AddOrEdit", "CusmtomerManagement", FormMethod.Post))
{
    @Html.HiddenFor(model => model.CustomerId)
    <div class="form-group">
        @Html.LabelFor(model => model.Name, new { @class = "control-label" })
        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.User, new { @class = "control-label" })
        @Html.EditorFor(model => model.User, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.SalesPerson, new { @class = "control-label" })
        @Html.EditorFor(model => model.SalesPerson, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.PastDueAmount, new { @class = "control-label" })
        @Html.EditorFor(model => model.PastDueAmount, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
    </div>
}